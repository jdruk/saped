      <a class="item" href="expediente">Corpo Editorial</a>
      <a class="item" href="an">anais</a>
      <div class="right menu">
        <div id="login" class="item">
          <a class="ui button">Log in</a>
        </div>
        <div class="item" id="cadastrar">
          <%= link_to 'Inscrever-se',new_user_registration_path ,class: 'ui primary button', style:"background-color:#4E94FF;" %>
        </div>
      </div>
    </div>
  </div>

  <%= yield :sidebar %>
  
  <%= yield %>

  <div id="footer" class='footer'>
    <div class="rodapeimg"> </div>
    <div class="rodape"> <p style="margin-left:22em;margin-top:3em;color:#fff;index-z:10;font-size:16px;" >
      Rua Cícero Duarte, 905. Junco. CEP 64.607-670. Picos-Piaui Tel: 89 3422 2058<br>
    </p></div>
    <div class="linhaesq"> </div>  
    
  </div>
    
  <!-- Modal user -->
  <%= render 'layouts/user' %> 
</div>
<%= yield :footer %>
</body>

</html>
