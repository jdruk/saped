<div class="ui centered grid container">
    <div class="ten wide column">
        <div class="ui top attached tabular menu">
          <a class="item" data-tab="one">Participantes não confirmados</a>
          <a class="item" data-tab="third">Relátorios</a>
          <a class="item" data-tab="four">Artigos</a>
        </div>
        <div class="ui bottom attached tab segment" data-tab="one">
          <%= render :partial => 'home/user_table', :locals => { users: @users_unconfirmed,  show_links: true } %>
        </div>
        <div class="ui bottom attached tab segment" data-tab="third">
            <p><%= link_to 'Trabalhos', user_poster_path, class: 'ui button positive' %>
            <%= link_to 'Usuários confirmados', users_confirmeds_path, class: 'ui button positive' %></p>
            <table class="ui fixed single line celled table">
                <thead>
                    <tr>
                        <th>Cursos</th>
                        <th>Quantidade confirmado</th>
                        <th>Lista de parcipantes</th>
                    </tr>
                </thead>
                <tbody>
                    <% @courses.each do |course|  %>    
                        <tr>
                            <td>
                                <%= course.name.upcase %>
                            </td>
                            <td>
                                <%= course.members_length %>    
                            </td>
                            <td>
                                <%= link_to "Lista", course_path(course, format: :pdf), class: 'ui button teal' %>
                            </td>
                             
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="ui bottom attached tab segment" data-tab="four">
           <table class="ui fixed single line celled table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Arquivo</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <% User.articles.each do |user|  %>    
                        <tr>
                            <td>
                                <%= user.name.upcase %>
                            </td>
                            <td>
                                <%= link_to 'Download', user.article_url, class: 'ui button ' %>  
                            </td>
                            <td>
                                <%= link_to('Aprove', aprove_article_path(user), class: 'ui button teal') unless user.article_aproved %>  
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $('.menu .item').tab();
    $.tab('change tab', 'one');
</script>

<% if params[:tab] %>
    <script>
        $.tab('change tab', params[:tab]);
    </script>
<% end %>