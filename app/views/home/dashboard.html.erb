<div class="nine wide column">
    <div id="regInnkommende" class="ui stacked segment">
      <a class="ui yellow ribbon label">Edital para envio de artigos</a>
      <p style="margin-top:2em;">
          <%= render 'layouts/alert_messages' %>
          Para download do edital <a href="edital.pdf" class="ui tiny button "> CLIQUE AQUI</a>.
      </p>
      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'ui form', multipart: true}) do |f| %>
          <p>
            <h5><label>Meu artigo</label></h5>
            <div class="field">
              <%= f.file_field :article, class: '' %>
              </div>
          </p>
          <div class="actions">
            <%= f.submit "Enviar", class: 'ui button teal' %>
          </div>
        <% end %>
      </div>
    </div>
  <div class="ui hidden divider"></div>
</div>

<!-- side bar -->
