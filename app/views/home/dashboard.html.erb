  <div class="ui secondary segment">
    <div class="ui grey small horizontal statistic">
      <div class="value">
        <%= current_user.status_pay %>
      </div>
    </div>
  </div>
  
  <div id="regInnkommende" class="ui stacked segment">
    <a class="ui blue ribbon label">Dados para pagamento</a>
