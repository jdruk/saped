  <div class="ui secondary segment">
    <div class="ui grey small horizontal statistic">
      <div class="value">
        <%= current_user.status_pay %>
      </div>
    </div>
  </div>
  
  <div id="regInnkommende" class="ui stacked segment">
    <a class="ui blue ribbon label">Dados para pagamento</a>
    <p style="margin-top:1em;">Banco: Banco do Brasil </p>
    <p>Agência: 3791-5</p>
    <p>Conta Corrente: 10.176-1</p>
    <p>Valor de R$ 30,00 </p>
    <h5>Enviar email com comprovante para: </h5>
    <p class='ui basic blue button'>
      <a href="mailto:saped-ufpi.financeira@hotmail.com?subject=Comprovante de pagamento&body=Comprovante de pagamento, adicione ao anexo o comprovante!">saped-ufpi.financeira@hotmail.com</a>
    </p>
  </div>
</div>